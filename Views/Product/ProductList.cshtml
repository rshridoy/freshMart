@model List<freshMart.Models.tbl_product>
@{
    ViewBag.Title = "ProductList";
}
<table class=" table table-hover">
    <tr>
        <th>Product Name</th>
        <th>Product Image</th>
        <th>Product Price</th>
        <th>Product Description</th>
    </tr>

    @foreach(var item in Model)
     {
        <tr>
            <td>@item.product_name</td>
            <td>@item.product_image</td>
            <td>@item.product_price</td>
            <td>@item.product_description</td>
            <td>
                <a href="@Url.Action("Proudct", new {item.product_id,item.product_name,item.product_image, item.product_description, item.product_price})" class="btn btn-success">Edit</a>
                <a href="@Url.Action("Delete",new {item.product_id})" class="btn btn-danger">Delete</a>
            </td>
        </tr>


     }
</table>


